<UserControl x:Class="WpfDataUi.Controls.NullableBoolDisplay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfDataUi.Controls"
             mc:Ignorable="d" 
             d:DesignWidth="200">
    <GroupBox x:Name="GroupBox">
        <StackPanel>
            <RadioButton x:Name="TrueRadioButton">True</RadioButton>
            <RadioButton x:Name="FalseRadioButton">False</RadioButton>
            <RadioButton x:Name="NullRadioButton">None</RadioButton>
        </StackPanel>
    </GroupBox>
</UserControl>
