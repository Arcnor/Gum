<UserControl x:Class="Gum.Plugins.FileWatchPlugin.FileWatchControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Gum.Plugins.FileWatchPlugin"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <TextBlock Text="{Binding WatchFolderInformation}"></TextBlock>
        <TextBlock Text="{Binding NumberOfFilesToFlush}"></TextBlock>
        <TextBlock Text="{Binding TimeToNextFlush}"></TextBlock>
        <TextBlock Text="{Binding NextFilesToFlush}"></TextBlock>
    </StackPanel>
</UserControl>
